            <id>hive-test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludedGroups combine.self="override"/>
                            <systemProperties>
                                <hiveMetastoreHost>localhost</hiveMetastoreHost>
                                <hiveMetastorePort>9083</hiveMetastorePort>
